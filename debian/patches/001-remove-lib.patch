-static u32 decodeHex(const char *p, int nbdigit)
-{
-    u32 ret = 0;
-    int i;
-    for (i = nbdigit - 1; i >= 0; i--, p++) {
-        u32 digit;
-        if (*p >= 'a' && *p <= 'f') {
-            digit = 10 + *p - 'a';
-        } else if (*p >= 'A' && *p <= 'F') {
-            digit = 10 + *p - 'A';
-        } else if (*p >= '0' && *p <= '9') {
-            digit = *p - '0';
-        } else {
-            return 0;
-        }
-        ret += digit << (4 * i);
-    }
-    return ret;
