-        if (i < n) {
-            c = s[i];
-        } else if (pad) {
-            if (pad & 0x80) {
-                if (i == n) c = pad;
-            } else {
-                if (i == n + 3) c = pad;
-                else if (i == n + 4) c = 0x80;
-            }
-        }
-        if (k == 0) {
-            j++;
-            wpak.shaw[j] = 0;
-            k = 32;
-        }
-        k -= 8;
-        wpak.shaw[j] |= ((u32)c << k);
-    }
-    if(pad) {
-        if(pad == 0x80) {
-            if(n <= ofs+55) {
-                wpak.shaw[15] = 8 * n;
-            }
